<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="left|center_vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_menu"
            tools:ignore="VectorDrawableCompat" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabListarAtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/ic_list"
            tools:ignore="VectorDrawableCompat"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/ic_perfil"
            tools:ignore="VectorDrawableCompat"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/ic_logout"
            tools:ignore="VectorDrawableCompat"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Dados de usuário"
        android:textColor="#082c66"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtNomeAlterar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Nome"
        android:textColor="#082c66"
        android:textSize="27sp" />

    <EditText
        android:id="@+id/edtSobrenomeAlterar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Sobrenome"
        android:textColor="#082c66"
        android:textSize="27sp" />

    <EditText
        android:id="@+id/edtEmailAlterar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#082c66"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/edtDataNascAlterar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Data de nasc."
        android:textColor="#082c66"
        android:textSize="27sp"/>

    <EditText
        android:id="@+id/edtSenhaAlterar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="#082c66"
        android:textSize="27sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">


        <Button
            android:id="@+id/btnSalvarAlteracoes"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="SALVAR ALTERAÇÕES"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="@android:color/white"
            android:background="#082C66"
            android:onClick="btnAlterarCadastro"/>

    </LinearLayout>

</LinearLayout>