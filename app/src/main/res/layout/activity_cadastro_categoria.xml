<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Dados da Categoria"
        android:textColor="#082c66"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtDescricaoCategoria"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Descrição da Categoria"
        android:textColor="#082c66"
        android:textSize="27sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnCadastrarCategoria"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="CADASTRAR"
            android:textStyle="bold"
            android:textSize="27sp"
            android:textColor="@android:color/white"
            android:background="#082c66"
            android:onClick="btnCadastrarCategoriaClick"/>
    </LinearLayout>
</LinearLayout>