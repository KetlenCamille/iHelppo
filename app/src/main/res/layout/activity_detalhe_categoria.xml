<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="left|center_vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_menu"
            tools:ignore="VectorDrawableCompat" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabListarAtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/ic_list"
            tools:ignore="VectorDrawableCompat"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/ic_perfil"
            tools:ignore="VectorDrawableCompat"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/ic_logout"
            tools:ignore="VectorDrawableCompat"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="DADOS DA CATEGORIA"
        android:textColor="#082c66"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtDescricaoCategoriaDet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:hint="Descrição da Categoria"
        android:textColor="#082c66"
        android:textSize="27sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnAlterarCategoria"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SALVAR"
            android:textStyle="bold"
            android:textSize="27sp"
            android:textColor="@android:color/white"
            android:background="#082c66"
            android:layout_marginBottom="10dp"
            android:onClick="btnAlterarCategoriaClick"/>

        <Button
            android:id="@+id/btnRemoverCategoria"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="REMOVER"
            android:textStyle="bold"
            android:textSize="27sp"
            android:textColor="@android:color/white"
            android:background="#082c66"
            android:layout_marginBottom="10dp"
            android:onClick="btnRemoverCategoriaClick"/>
    </LinearLayout>
</LinearLayout>