<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:gravity="left|center_vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_menu"
            tools:ignore="VectorDrawableCompat" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabListarAtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/ic_list"
            tools:ignore="VectorDrawableCompat"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/ic_perfil"
            tools:ignore="VectorDrawableCompat"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/ic_logout"
            tools:ignore="VectorDrawableCompat"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="PERFIL"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#082c66"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/icon_user"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnMeusDados"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="MEUS DADOS"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#082c66"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="btnMeusDadosClick"/>

        <Button
        android:id="@+id/btnCadastrarCategoria"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="CADASTRAR CATEGORIA"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="#082c66"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:onClick="btnCadastrarCategoriaClick"/>

        <Button
            android:id="@+id/btnListarCategorias"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="LISTAR CATEGORIAS"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#082c66"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="btnListarCategoriasClick"/>

        <Button
            android:id="@+id/btnHistoricoAtividades"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="HISTÃ“RICO DE ATIVIDADES"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#082c66"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="btnHistoricoAtivClick"/>

        <Button
            android:id="@+id/btnAtividadesPendentes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="ATIVIDADES PENDENTES"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#082c66"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="btnAtividadesPendentesClick"/>

        <Button
            android:id="@+id/btnAtividadesFuturas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="ATIVIDADES FUTURAS"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#082c66"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="btnAtividadesFuturasClick"/>

</LinearLayout>


</LinearLayout>